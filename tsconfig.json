{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "elm-stuff",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false
}